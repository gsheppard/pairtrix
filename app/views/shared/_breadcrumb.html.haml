%ul.breadcrumb
  - if defined?(company)
    = breadcrumb_link({text: company.name,
                       url: company_url(company)})
  - if defined?(employees)
    = breadcrumb_link({text: "#{company.name} employees",
                       url: company_employees_url(company),
                       divider: true})
  - else
    = breadcrumb_link({text: "#{company.name} teams",
                       url: company_teams_url(company),
                       divider: true})

  - if defined?(team)
    = breadcrumb_link({text: "#{team.name} team matrix",
                       url: team_url(team),
                       divider: true})
    = breadcrumb_link({text: "#{team.name} team memberships",
                       url: team_team_memberships_url(team),
                       divider: true})
