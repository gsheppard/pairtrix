= error_messages_for(employee)
= form.input :first_name
= form.input :last_name
= form.input :avatar, as: :file
= form.hidden_field :avatar_cache

= form.input :remote_avatar_url, label: "Or Image URL:"

= form.input :remove_avatar, as: :boolean, inline_label: "Delete Avatar", label: false

- if employee.avatar?
  .control-group
    = form.label :avatar_image
    .controls
      = image_tag(employee.avatar_url)

= form.button :wrapped, cancel: company_employees_url(employee.company)
