#team.modal.hide.fade{tabindex: "-1", role: "dialog", "aria-labelledby" => "teamLabel", "aria-hidden" => "true"}
  .modal-header
    %button.close{type: "button", "data-dismiss" => "modal", "aria-hidden" => "true"}
      x
    %h3#teamLabel
      Add Team
  .modal-body
    - team = company.teams.build
    = simple_form_for [company, team], html: {id: "team_ajax"} do |f|
      = f.input :name
  .modal-footer
    %button.btn{"data-dismiss" => "modal", "aria-hiddeni" => "true"}
      Cancel
    %button#team-submit.btn.btn-primary
      Add Team
