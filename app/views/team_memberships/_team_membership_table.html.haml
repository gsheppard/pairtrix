= render(partial: "shared/breadcrumb", locals: { company: team.company, team: team })
%h3
  Team Memberships

- if team.company.available_employees.any?
  .new-item
    = link_to 'New Team Membership', new_team_team_membership_url(team)

%table.table.table-striped.table-condensed.table-bordered
  %thead
    %tr
      %th
        Employee Name
      %th
        Start date
      %th
        End date
      %th
        Action
  %tbody
    = render(partial: 'team_memberships/team_membership_row', collection: team.team_memberships.sorted, as: 'team_membership')
