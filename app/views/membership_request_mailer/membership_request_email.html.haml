!!!
%html.no-js{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %title
      Company Membership request for #{@company.name}
  %body
    %h3
      Company Membership request for #{@company.name}
    %p
      %strong
        Name:
      = @user.name
    %p
      %strong
        Email:
      = @user.email
    %p
      = link_to("Approve", approve_membership_request_url(id: @hash_key))
    %p
      = link_to("Deny", deny_membership_request_url(id: @hash_key))
